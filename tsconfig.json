{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      // "@types/filesize",
      // "@types/jest",
      // "@types/node",
      // "@types/webpack-env",
      "nuxt-i18n",
      "testcafe",
      "vue-i18n",
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "globals": {
    "it": false,
    "expect": false
  },
}
